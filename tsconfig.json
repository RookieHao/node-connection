{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUnusedLocals":true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "target": "ES5",
    "allowJs": true,
    "strict": true,
    "module": "umd",
    "outDir": "dist",
    "removeComments":true,
    "alwaysStrict":true
  },
  "include": ["lib"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}